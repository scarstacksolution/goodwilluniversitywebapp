@model Person
@{
    ViewData["Title"] = "Employee Insights Page";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</head>


<body>
    <br />
    <br />
    <div class="card">
        <div class="card-header" style="color:purple; font-size:x-large">
            Biology Class Student Roll Data
        </div>
        <div class="card-body">
            <h5 class="card-title" style="color: green; font-family: monospace">Enrolled Student Information</h5>
            <p class="card-text">
                Use this form to verify, validate or lookup students enrolled in the Sophmore Biology Class for the Academic year 2023.
                The form provides basic details of a student based on and ID passed in for the student you are interested in looking up!
            </p>
        </div>
    </div>
    <br />
    <br />

    <div class="row">

        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {

            <div id="form-area">
                <div class="text-bg-light p-3">


                    <div class="row">
                        <div class="col-md-4 form-group firstRowInsightFrom">
                            <br />
                            <label for="validationDefault01" class="form-label">ID No:</label>
                            @Html.TextBoxFor(e => e.id, new { @class = "form-control", @id = "validationDefault01" })
                            <br />
                        </div>

                        <div class="row">
                            <div>
                                <input class="btn btn-primary" type="submit" value="submit" checked="checked" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</body>
</html>